{% extends 'base.html.twig' %}

{% block title %}- {{ ad.title }}{% endblock %}

{% block body %}
    <div class="maxTitle" style="background-image: url({{ ad.coverImage }}); display:block !important;">

    <div class="container pb-4 pt-4 maxTitle" style="color:white;">
        <h1>{{ ad.title }}</h1>
        <p>{{ ad.introduction }}</p>
        <p class="h2">
            <strong>{{ ad.rooms }} chambres</strong>
            pour <strong>{{ ad.price }} par nuit</strong>
