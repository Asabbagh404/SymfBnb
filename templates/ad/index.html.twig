{% extends 'base.html.twig' %}

{% block title %}- Nos magnifique annonces{% endblock %}

{% block body %}
<div class="container my-3"><h1>Les annonces de nos hôtes</h1></div>

    <div class="row">
        {% for ad in ads %}
            {% set url = path("ads_show", {'slug': ad.slug}) %}
            <a href="{{ url }}" style="color:#343a40;text-decoration: none">
            <div class="col-md-4">
                <div class="card bg-light mb-3" style="height:97%">
                    <div class="card-header text-center">
                        {{ ad.rooms }} chambres, <strong>{{ ad.price }} &euro; / nuit</strong></br>
                        <small>Pas encore noté</small>
                    </div>
                    <div style="width:100%;overflow: hidden">

                            <img src="{{ ad.coverImage }}" alt="Img appart" style="height:200px; width:100%;display: block;">

                    </div>
                    <div class="card-body">
                        <div class='heightAd' style="height: 270px;">
                        <h4 class="card-title">
                            {{ ad.title }}
                        </h4>
                        <p class="card-text" >
                            {{ ad.introduction }}
                        </p>
                        </div>
                        <a href="{{ url }}" class="btn btn-secondary">En savoir plus</a>
                    </div>
                </div>
            </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}
